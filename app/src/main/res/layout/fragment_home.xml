<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".scooby.ui.HomeFragment">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white_BG"
        android:backgroundTint="@color/white_BG"
        app:headerLayout="@layout/side_menu_header"
        app:menu="@menu/navigation_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/top_app_bar_bg">

            <ImageView
                android:id="@+id/side_menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hi_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/hi"
                android:textColor="@color/black_font"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/side_menu_icon"
                app:layout_constraintTop_toTopOf="parent" />
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/chat_icon"
                android:src="@drawable/message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="11dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_BG"
            android:backgroundTint="@color/white_BG"
            app:layout_behavior="com.google.android.material.search.SearchBar$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="14dp"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="24"
                    app:iss_delay="0"
                    app:iss_period="1500"
                    app:iss_selected_dot="@drawable/selected_icon"
                    app:iss_unselected_dot="@drawable/not_selected_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/what_are_you_looking_for"
                    android:textColor="@color/black_font"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_slider" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/vet_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/vet_image"
                    app:layout_constraintEnd_toStartOf="@+id/boarding_icon"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_1" />

                <TextView
                    android:id="@+id/vet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/vet"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/vet_icon"
                    app:layout_constraintStart_toStartOf="@id/vet_icon"
                    app:layout_constraintTop_toBottomOf="@id/vet_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/boarding_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:src="@drawable/boarding_image"
                    app:layout_constraintEnd_toStartOf="@+id/sitting_icon"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/vet_icon"
                    app:layout_constraintTop_toTopOf="@+id/vet_icon" />

                <TextView
                    android:id="@+id/boarding_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/boarding"

                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/boarding_icon"
                    app:layout_constraintStart_toStartOf="@+id/boarding_icon"
                    app:layout_constraintTop_toBottomOf="@id/boarding_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sitting_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/sitting_image"
                    app:layout_constraintEnd_toStartOf="@+id/pet_friendly_places_icon"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/boarding_icon"
                    app:layout_constraintTop_toBottomOf="@id/text_1" />

                <TextView
                    android:id="@+id/sitting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/sitting"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/sitting_icon"
                    app:layout_constraintStart_toStartOf="@+id/sitting_icon"
                    app:layout_constraintTop_toBottomOf="@id/sitting_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pet_friendly_places_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/pet_friendly_places_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/sitting_icon"
                    app:layout_constraintTop_toBottomOf="@id/text_1" />

                <TextView
                    android:id="@+id/pet_friendly_places_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/pet_friendly_places"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/pet_friendly_places_icon"
                    app:layout_constraintStart_toStartOf="@+id/pet_friendly_places_icon"
                    app:layout_constraintTop_toBottomOf="@id/pet_friendly_places_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/grooming_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/grooming_image"
                    app:layout_constraintEnd_toStartOf="@id/training_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vet_text" />

                <TextView
                    android:id="@+id/grooming_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/grooming"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/grooming_icon"
                    app:layout_constraintStart_toStartOf="@+id/grooming_icon"
                    app:layout_constraintTop_toBottomOf="@id/grooming_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/training_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/training_image"
                    app:layout_constraintEnd_toStartOf="@id/supplies_icon"
                    app:layout_constraintStart_toEndOf="@id/grooming_icon"
                    app:layout_constraintTop_toBottomOf="@id/boarding_text" />

                <TextView
                    android:id="@+id/training_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/training"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/training_icon"
                    app:layout_constraintStart_toStartOf="@+id/training_icon"
                    app:layout_constraintTop_toBottomOf="@id/training_icon"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/supplies_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/supplies_image"
                    app:layout_constraintEnd_toStartOf="@id/more_icon"
                    app:layout_constraintStart_toEndOf="@id/training_icon"
                    app:layout_constraintTop_toBottomOf="@id/sitting_text" />

                <TextView
                    android:id="@+id/supplies_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/supplies"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/supplies_icon"
                    app:layout_constraintStart_toStartOf="@+id/supplies_icon"
                    app:layout_constraintTop_toBottomOf="@id/supplies_icon"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="420dp" />

                <ImageView
                    android:id="@+id/more_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="17dp"
                    android:contentDescription="@string/more_icon"
                    android:src="@drawable/more_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/supplies_icon"
                    app:layout_constraintTop_toBottomOf="@+id/pet_friendly_places_text" />

                <TextView
                    android:id="@+id/more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/more"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/more_icon"
                    app:layout_constraintStart_toStartOf="@+id/more_icon"
                    app:layout_constraintTop_toBottomOf="@id/more_icon"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="340dp"
                    tools:layout_editor_absoluteY="420dp" />

                <LinearLayout
                    android:id="@+id/services_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/grooming_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/services"
                        android:textColor="@color/black_font"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/services_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:text="@string/see_more"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primary"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/services_rv"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/services_title"
                    tools:listitem="@layout/services_item_home" />

                <LinearLayout
                    android:id="@+id/Pets_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/services_rv">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="180dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/pets_in_community"
                        android:textColor="@color/black_font"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/pets_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:text="@string/see_more"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primary"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pets_rv"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Pets_title"
                    tools:listitem="@layout/pets_item_home" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dag_walking"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#75E384FF"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pets_rv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="110dp"
                            android:contentDescription="@string/dog_walking_cartoon"
                            android:src="@drawable/dog_walking_cartoon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_card_1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/let_your_pet_explore_the_world"
                            android:textColor="@color/black_clear"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_card_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/walk_with_scooby_and_share"
                            android:textColor="@color/black_clear"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_card_1" />

                        <TextView
                            android:id="@+id/text_card_3"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/info_with_your_friends"
                            android:textColor="@color/black_clear"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_card_2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/Blogs_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_dag_walking">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="180dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/blogs"
                        android:textColor="@color/black_font"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/blogs_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/roboto"
                        android:text="@string/see_more"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primary"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/blogs_rv"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Blogs_title"
                    tools:listitem="@layout/blogs_item_home" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
