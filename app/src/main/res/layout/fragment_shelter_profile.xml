<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FEFBFB"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".scooby.services.fragment.ShelterProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/shelter_profile_image"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="2500"
                app:iss_selected_dot="@drawable/selected_icon"
                app:iss_unselected_dot="@drawable/not_selected_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_shelter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black_clear"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shelter_profile_image"
                tools:text="Pet Boarding service" />

            <RatingBar
                android:id="@+id/rate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="42dp"
                android:numStars="5"
                android:progressTint="@color/yellow_rate"
                android:rating="4"
                android:scaleX=".9"
                android:scaleY=".9"
                android:stepSize="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shelter_profile_image" />

            <LinearLayout
                android:id="@+id/rate_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/rate"
                app:layout_constraintStart_toEndOf="@id/rate">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="("
                    android:textColor="#605C5C"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/rate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="#605C5C"
                    android:textSize="10sp"
                    tools:text="44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text=")"
                    android:textColor="#605C5C"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_shelter_name">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    tools:text="Second New Cairo" />

                <TextView
                    android:id="@+id/tv_duration_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="#605C5C"
                    android:textSize="8sp"
                    tools:text="Opens 24 hours." />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/location_shelter_btn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="84dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="0dp"
                android:text="@string/directions"
                android:textAlignment="center"
                android:textColor="@color/black_font"
                android:textSize="10sp"
                app:cornerRadius="54dp"
                app:icon="@drawable/directions_icon"
                app:iconGravity="textStart"
                app:iconSize="15dp"
                app:iconTint="@color/blue_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/duration_location_layout"
                app:strokeColor="@color/black_30"
                app:strokeWidth="0.5dp"
                tools:ignore="SmallSp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_shelter_btn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="67dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:text="@string/sava"
                android:textAlignment="center"
                android:textColor="@color/black_font"
                android:textSize="10sp"
                app:cornerRadius="54dp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                app:iconSize="10dp"
                app:iconTint="@color/blue_icon"
                app:layout_constraintStart_toEndOf="@id/call_shelter_btn"
                app:layout_constraintTop_toBottomOf="@id/duration_location_layout"
                app:strokeColor="@color/black_30"
                app:strokeWidth="0.5dp"
                tools:ignore="SmallSp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_shelter_btn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="67dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:text="@string/call"
                android:textAlignment="center"
                android:textColor="@color/black_font"
                android:textSize="10sp"
                app:cornerRadius="54dp"
                app:icon="@drawable/call_icon"
                app:iconGravity="textStart"
                app:iconSize="8dp"
                app:iconTint="@color/blue_icon"
                app:layout_constraintStart_toEndOf="@id/location_shelter_btn"
                app:layout_constraintTop_toBottomOf="@id/duration_location_layout"
                app:strokeColor="@color/black_30"
                app:strokeWidth="0.5dp"
                tools:ignore="SmallSp" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/services_profile_card"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/location_shelter_btn"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/about"
                        android:textColor="@color/black_clear"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_about_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto"
                        android:lineHeight="18sp"
                        android:paddingEnd="24sp"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_about"
                        tools:text="@string/des_services" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/can_not_adopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/can_t_adopt"
                android:textColor="@color/black_clear"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/services_profile_card" />
            <LinearLayout
                android:id="@+id/pet_types_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/can_not_adopt"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="154dp"
                    android:layout_height="34dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:layout_marginEnd="18dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_accepted_pet_types"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_heart" />

                    <TextView
                        android:id="@+id/tv_dogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/donate"
                        android:textColor="@color/black_clear"
                        android:textSize="12sp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="154dp"
                    android:layout_height="34dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@id/pet_types_card"
                    app:layout_constraintTop_toBottomOf="@id/tv_accepted_pet_types"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_volte" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/volunteer"
                        android:textColor="@color/black_clear"
                        android:textSize="12sp" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>



            <TextView
                android:id="@+id/tv_lonely"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/lonely_hearts_looking_for_love"
                android:textColor="@color/black_clear"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pet_types_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pets"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_lonely"
                app:layout_constraintTop_toBottomOf="@id/tv_lonely" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/line_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_pets" />

            <TextView
                android:id="@+id/tvReviewView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/reviews"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReview"
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="47dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReviewView"
                tools:listitem="@layout/item_review" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/small_circle_black_50" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/small_circle_black_50" />

            <com.varunest.sparkbutton.SparkButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:sparkbutton_activeImage="@drawable/favorite_fill_services_profile"
                app:sparkbutton_animationSpeed="1.5"
                app:sparkbutton_iconSize="20dp"
                app:sparkbutton_inActiveImage="@drawable/favorite_not_fill_ser_profile"
                app:sparkbutton_primaryColor="@color/primary"
                app:sparkbutton_secondaryColor="@color/yellow" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

