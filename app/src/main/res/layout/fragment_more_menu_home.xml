<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scooby.ui.MoreMenuHomeFragment">


    <TextView
        android:id="@+id/request_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/roboto"
        android:text="@string/requests"
        android:textColor="@color/black_font"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/do_you_need_help_with_your_pets_book_what_you_re_looking_for"
        android:textColor="@color/black_font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toBottomOf="@id/second_text"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vet_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/vet_image"
            app:layout_constraintEnd_toStartOf="@+id/boarding_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/vet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/vet"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/vet_icon"
            app:layout_constraintStart_toStartOf="@id/vet_icon"
            app:layout_constraintTop_toBottomOf="@id/vet_icon"
            tools:ignore="MissingConstraints,SmallSp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boarding_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/boarding_image"
            app:layout_constraintEnd_toStartOf="@+id/sitting_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/vet_icon"
            app:layout_constraintTop_toTopOf="@+id/vet_icon" />

        <TextView
            android:id="@+id/boarding_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/boarding"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/boarding_icon"
            app:layout_constraintStart_toStartOf="@+id/boarding_icon"
            app:layout_constraintTop_toBottomOf="@id/boarding_icon"
            tools:ignore="MissingConstraints,SmallSp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sitting_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/sitting_image"
            app:layout_constraintEnd_toStartOf="@+id/pet_friendly_places_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/boarding_icon"
            app:layout_constraintTop_toBottomOf="@id/second_text" />

        <TextView
            android:id="@+id/sitting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/sitting"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sitting_icon"
            app:layout_constraintStart_toStartOf="@+id/sitting_icon"
            app:layout_constraintTop_toBottomOf="@id/sitting_icon"
            tools:ignore="MissingConstraints,SmallSp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/daycare_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pet_friendly_places_image"
            app:layout_constraintEnd_toStartOf="@id/pet_friendly_places_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sitting_icon"
            app:layout_constraintTop_toBottomOf="@id/second_text" />

        <TextView
            android:id="@+id/daycare_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/daycare"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/daycare_icon"
            app:layout_constraintStart_toStartOf="@+id/daycare_icon"
            app:layout_constraintTop_toBottomOf="@id/daycare_icon"
            tools:ignore="MissingConstraints,SmallSp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pet_friendly_places_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pet_friendly_places_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/daycare_icon"
            app:layout_constraintTop_toBottomOf="@id/second_text" />

        <TextView
            android:id="@+id/pet_friendly_places_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/pet_friendly"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/pet_friendly_places_icon"
            app:layout_constraintStart_toStartOf="@+id/pet_friendly_places_icon"
            app:layout_constraintTop_toBottomOf="@id/pet_friendly_places_icon"
            tools:ignore="MissingConstraints,SmallSp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>