<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/white_BG"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/black_20"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_doctor_vet"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="14dp"
            android:layout_marginStart="9dp"
            android:contentDescription="@string/doctors"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/name_doctor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/image_doctor_vet"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Dr Anas El Gazzar" />

        <TextView
            android:id="@+id/rate_doctor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_75"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/image_doctor_vet"
            app:layout_constraintTop_toBottomOf="@id/name_doctor_tv"
            tools:ignore="SmallSp"
            tools:text="4.1" />

        <RatingBar
            android:id="@+id/rate_bar_veterinary"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:numStars="5"
            android:progressTint="@color/yellow_rate"
            android:rating="4.1"
            android:scaleX=".5"
            android:scaleY=".5"
            android:stepSize="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_doctor_vet"
            app:layout_constraintTop_toBottomOf="@id/name_doctor_tv" />

        <TextView
            android:id="@+id/number_of_rate_doctor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_75"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/rate_doctor_tv"
            app:layout_constraintTop_toBottomOf="@id/name_doctor_tv"
            tools:ignore="SmallSp"
            tools:text="(108)" />

        <TextView
            android:id="@+id/description_doctor_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:textColor="@color/black_95"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_doctor_vet"
            app:layout_constraintTop_toBottomOf="@id/rate_doctor_tv"
            tools:ignore="SmallSp"
            tools:text="3+ years in business" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/man_icon"
            android:src="@drawable/man"
            app:layout_constraintStart_toEndOf="@id/image_doctor_vet"
            app:layout_constraintTop_toBottomOf="@id/description_doctor_tv" />

        <TextView
            android:id="@+id/review_doctor_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:textColor="@color/black_95"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_doctor_vet"
            app:layout_constraintTop_toBottomOf="@id/description_doctor_tv"
            tools:ignore="SmallSp"
            tools:text="3+ years in business" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_doctor"
            android:layout_width="53dp"
            android:layout_height="32dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/roboto_medium"
            android:padding="0dp"
            android:text="@string/book"
            android:textSize="8sp"
            app:cornerRadius="91dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SmallSp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>