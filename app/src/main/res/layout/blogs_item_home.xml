<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="243dp"
    android:layout_height="135dp"
    android:layout_marginStart="16dp"
    android:backgroundTint="@color/white_BG"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_card_blog_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_card_blog_home"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/item_plogs_1" />

        <ImageView
            android:id="@+id/bg_shadow_blog_home"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:contentDescription="@string/back_ground_shadow_blog_home"
            android:scaleType="fitXY"
            android:src="@drawable/shadow_item_plog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/title_card_blog_home"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginVertical="9dp"
            android:fontFamily="@font/roboto_medium"
            android:minLines="2"
            android:paddingStart="11dp"
            android:paddingEnd="32dp"
            android:text="@string/title_card_blog_item"
            android:textColor="@color/white_card"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bg_shadow_blog_home"
            tools:ignore="SmallSp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>