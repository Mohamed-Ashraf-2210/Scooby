<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scooby.paws.fragment.RescueFragment">

    <TextView
        android:id="@+id/tv_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_pet_shelters"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shelters"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_free"
        tools:listitem="@layout/item_shelter"
        />

    <TextView
        android:id="@+id/tv_babies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/babies_waiting_for_you"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="24dp"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/rv_shelters"
        app:layout_constraintStart_toStartOf="parent"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pets_In_Shelter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="11dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_babies"
        tools:listitem="@layout/item_pet_shelter"
        app:spanCount="2"
        />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>