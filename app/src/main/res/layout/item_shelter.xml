<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="166dp"
    android:layout_height="204dp"
    app:cardCornerRadius="8dp"
    android:layout_marginEnd="16dp"
    app:strokeWidth=".5dp"
    app:strokeColor="@color/black_15"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image"
            android:layout_width="146dp"
            android:layout_height="106dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/shelter_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/shelter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black_95"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_image"
            tools:text="CART Dog Shelter" />

        <TextView
            android:id="@+id/shelter_num_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelter_name"
            tools:text="4.2" />

        <RatingBar
            android:id="@+id/rate"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:numStars="5"
            android:progressTint="@color/yellow_rate"
            android:rating="4"
            android:scaleX=".7"
            android:scaleY=".7"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelter_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/rate"
            app:layout_constraintStart_toEndOf="@id/rate"
            app:layout_constraintTop_toTopOf="@id/rate">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="8dp" />

            <TextView
                android:id="@+id/num_like_shelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:text="45"
                android:textSize="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="8dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/shelter_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Open 24 hours."
            android:textSize="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelter_num_rate" />

        <TextView
            android:id="@+id/shelter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="Badrshein"
            android:textSize="7dp"
            app:layout_constraintBaseline_toBaselineOf="@id/shelter_timing"
            app:layout_constraintStart_toEndOf="@id/shelter_timing"
            app:layout_constraintTop_toBottomOf="@id/shelter_num_rate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/location_shelter_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="52dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="0dp"
            android:text="@string/directions"
            android:textAlignment="textStart"
            android:textColor="@color/black_font"
            android:textSize="6sp"
            app:cornerRadius="54dp"
            app:icon="@drawable/directions_icon"
            app:iconGravity="start"
            app:iconPadding="2dp"
            app:iconSize="9dp"
            app:iconTint="@color/blue_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelter_timing"
            app:strokeColor="@color/black_30"
            app:strokeWidth="0.5dp"
            tools:ignore="SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_shelter_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="31dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="0dp"
            android:paddingStart="4dp"
            android:text="@string/sava"
            android:textAlignment="textStart"
            android:textColor="@color/black_font"
            android:textSize="6sp"
            app:cornerRadius="54dp"
            app:icon="@drawable/ic_save"
            app:iconGravity="start"
            app:iconPadding="2dp"
            app:iconSize="6dp"
            app:iconTint="@color/blue_icon"
            app:layout_constraintStart_toEndOf="@id/location_shelter_btn"
            app:layout_constraintTop_toBottomOf="@id/shelter_timing"
            app:strokeColor="@color/black_30"
            app:strokeWidth="0.5dp"
            tools:ignore="SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/call_shelter_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="31dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="0dp"
            android:paddingStart="4dp"
            android:text="@string/call"
            android:textAlignment="textStart"
            android:textColor="@color/black_font"
            android:textSize="6sp"
            app:cornerRadius="54dp"
            app:icon="@drawable/call_icon"
            app:iconGravity="start"
            app:iconPadding="2dp"
            app:iconSize="7dp"
            app:iconTint="@color/blue_icon"
            app:layout_constraintStart_toEndOf="@id/save_shelter_btn"
            app:layout_constraintTop_toBottomOf="@id/shelter_timing"
            app:strokeColor="@color/black_30"
            app:strokeWidth="0.5dp"
            tools:ignore="SmallSp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>