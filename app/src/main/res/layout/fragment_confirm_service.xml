<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_BG"
    tools:context=".scooby.request.ConfirmServiceFragment">


    <ImageView
        android:id="@+id/back_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/back"
        android:src="@drawable/arrow_left_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/review_your_service"
        android:textColor="@color/black_font"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/review_service_card"
        app:layout_constraintStart_toStartOf="@id/review_service_card" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/change_plan"
        android:textColor="@color/black_font"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@id/review_service_card"
        app:layout_constraintEnd_toEndOf="@id/review_service_card"
        tools:ignore="SmallSp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/review_service_card"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="@color/app_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_screen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/pet_boarding_service"
                android:textColor="@color/white_BG"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/night_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/night"
                android:textColor="@color/app_background"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/night_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/yellow_request"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/night_text"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$20" />

            <TextView
                android:id="@+id/pets_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="37dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/app_background"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="For 1 pet" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black_font"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$20 for a night" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/total"
                android:textColor="@color/black_font"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/total_price" />

            <TextView
                android:id="@+id/data_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black_edit_text"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/total_price"
                app:layout_constraintTop_toBottomOf="@id/total_price"
                tools:text="3rd April, 2024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/date"
                android:textColor="@color/black_font"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/data_request" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="34dp"
                android:text="@string/dot"
                android:textColor="@color/black_font"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/normal_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="36dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black_edit_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Normal price is $20 / night" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="14dp"
                android:text="@string/dot"
                android:textColor="@color/black_font"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/cancel_anytime"
                android:textColor="@color/black_edit_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/app_background"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_service_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/payment_details"
                android:textColor="@color/black_font"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/card_number"
                android:textColor="@color/black_80"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/card_number_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="92dp"
                android:background="@drawable/edit_text_border_shape"
                android:drawableStart="@drawable/credit_card_icon"
                android:drawablePadding="5dp"
                android:hint="@string/_0000_0000_0000_0000"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/black_font"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,SmallSp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/expiry_date"
                android:textColor="@color/black_80"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_number_layout" />

            <EditText
                android:id="@+id/expiry_date_layout"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_border_shape"
                android:hint="@string/mm_yy"
                android:inputType="number"
                android:maxLength="5"
                android:padding="12dp"
                android:textColor="@color/black_font"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_number_layout"
                tools:ignore="Autofill,SmallSp,TextFields" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="81dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/security_code"
                android:textColor="@color/black_80"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_number_layout" />

            <EditText
                android:id="@+id/security_code_layout"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_border_shape"
                android:drawableEnd="@drawable/formkit_help"
                android:inputType="number"
                android:maxLength="3"
                android:padding="5dp"
                android:textColor="@color/black_font"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_number_layout"
                tools:ignore="Autofill,SmallSp,TextFields" />

            <CheckBox
                android:id="@+id/save_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto"
                android:text="@string/save_card_for_future_purchases"
                android:textColor="@color/black_font"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gray_btn"
            app:cornerRadius="4dp"
            app:icon="@drawable/exit_icon"
            app:iconSize="48dp"
            app:iconTint="@color/black_clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:padding="0dp"
            android:text="@string/confirm"
            app:cornerRadius="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
