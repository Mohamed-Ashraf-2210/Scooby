<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/white_BG"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/black_20"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_veterinary"
            android:layout_width="111dp"
            android:layout_height="99dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/veterinary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/veterinary_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/veterinary_pharmacy"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rate_veterinary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_75"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:layout_constraintTop_toBottomOf="@id/veterinary_name_tv"
            tools:ignore="SmallSp"
            tools:text="4.1" />

        <RatingBar
            android:id="@+id/rate_bar_veterinary"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:numStars="5"
            android:progressTint="@color/yellow_rate"
            android:scaleX=".5"
            android:scaleY=".5"
            android:stepSize="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_veterinary"
            app:layout_constraintTop_toBottomOf="@id/veterinary_name_tv"
            tools:rating="4.1" />

        <TextView
            android:id="@+id/number_of_rate_veterinary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_75"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/rate_veterinary_tv"
            app:layout_constraintTop_toBottomOf="@id/veterinary_name_tv"
            tools:ignore="SmallSp"
            tools:text="(108)" />

        <TextView
            android:id="@+id/description_veterinary_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:textColor="@color/black_95"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:layout_constraintTop_toBottomOf="@id/rate_veterinary_tv"
            tools:ignore="SmallSp"
            tools:text="3+ years in business" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/man_icon"
            android:src="@drawable/man"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:layout_constraintTop_toBottomOf="@id/description_veterinary_tv" />

        <TextView
            android:id="@+id/review_veterinary_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="2"
            android:textColor="@color/black_95"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:layout_constraintTop_toBottomOf="@id/description_veterinary_tv"
            tools:ignore="SmallSp"
            tools:text="3+ years in business" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/location_pharmacy_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/white_BG"
            android:fontFamily="@font/roboto"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/directions"
            android:textAlignment="textStart"
            android:textColor="@color/black_font"
            android:textSize="8sp"
            app:cornerRadius="54dp"
            app:icon="@drawable/directions_icon"
            app:iconGravity="end"
            app:iconPadding="0dp"
            app:iconTint="@color/blue_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_veterinary"
            app:strokeColor="@color/black_30"
            app:strokeWidth="0.5dp"
            tools:ignore="SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/call_pharmacy_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/white_BG"
            android:fontFamily="@font/roboto"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/call"
            android:textAlignment="textStart"
            android:textColor="@color/black_font"
            android:textSize="8sp"
            app:cornerRadius="54dp"
            app:icon="@drawable/call_icon"
            app:iconGravity="end"
            app:iconPadding="0dp"
            app:iconSize="9dp"
            app:iconTint="@color/blue_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/location_pharmacy_btn"
            app:strokeColor="@color/black_30"
            app:strokeWidth="0.5dp"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>