<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/toHomeFragment">

    <navigation
        android:id="@+id/toHomeFragment"
        app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.scooby.scooby.ui.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_blogsFragment"
                app:destination="@id/blogsFragment" />
            <action
                android:id="@+id/action_homeFragment_to_servicesFragment"
                app:destination="@id/servicesFragment" />
            <action
                android:id="@+id/action_homeFragment_to_vetFragment"
                app:destination="@id/vetFragment" />
            <action
                android:id="@+id/action_homeFragment_to_menuBottomSheetFragment"
                app:destination="@id/menuBottomSheetFragment" />
            <action
                android:id="@+id/action_homeFragment_to_selectPetFragment"
                app:destination="@id/selectPetFragment" />
        </fragment>
        <fragment
            android:id="@+id/blogsFragment"
            android:name="com.example.scooby.scooby.ui.BlogsFragment"
            android:label="fragment_blogs"
            tools:layout="@layout/fragment_blogs" />
        <fragment
            android:id="@+id/servicesFragment"
            android:name="com.example.scooby.scooby.services.fragment.ServiceFragment"
            android:label="fragment_services"
            tools:layout="@layout/fragment_service" />
        <fragment
            android:id="@+id/doctorsFragment"
            android:name="com.example.scooby.scooby.ui.DoctorsFragment"
            android:label="fragment_doctors"
            tools:layout="@layout/fragment_doctors" />
        <fragment
            android:id="@+id/vetFragment"
            android:name="com.example.scooby.scooby.vet.VetFragment"
            android:label="fragment_vet"
            tools:layout="@layout/fragment_vet">
            <action
                android:id="@+id/action_vetFragment_to_doctorsFragment"
                app:destination="@id/doctorsFragment" />
            <action
                android:id="@+id/action_vetFragment_to_productFragment"
                app:destination="@id/productFragment" />
        </fragment>
        <fragment
            android:id="@+id/productFragment"
            android:name="com.example.scooby.scooby.product.fragment.ProductFragment"
            android:label="fragment_product"
            tools:layout="@layout/fragment_product" >
            <action
                android:id="@+id/action_productFragment_to_favoriteFragment"
                app:destination="@id/favoriteFragment" />
        </fragment>

        <dialog
            android:id="@+id/menuBottomSheetFragment"
            android:name="com.example.scooby.scooby.ui.MenuBottomSheetFragment"
            android:label="menu_bottom_sheet"
            tools:layout="@layout/menu_bottom_sheet">
            <action
                android:id="@+id/action_menuBottomSheetFragment_to_vetFragment"
                app:destination="@id/vetFragment" />
            <action
                android:id="@+id/action_menuBottomSheetFragment_to_selectPetFragment"
                app:destination="@id/selectPetFragment" />
        </dialog>
        <fragment
            android:id="@+id/selectPetFragment"
            android:name="com.example.scooby.scooby.request.SelectPetFragment"
            android:label="fragment_select_pet"
            tools:layout="@layout/fragment_select_pet">
            <argument
                android:name="request_name"
                app:argType="string" />
            <action
                android:id="@+id/action_selectPetFragment_to_dateRequestFragment"
                app:destination="@id/dateRequestFragment" />
        </fragment>


        <fragment
            android:id="@+id/dateRequestFragment"
            android:name="com.example.scooby.scooby.request.DateRequestFragment"
            android:label="fragment_date_request"
            tools:layout="@layout/fragment_date_request">
            <action
                android:id="@+id/action_dateRequestFragment_to_durationRequestFragment"
                app:destination="@id/durationRequestFragment" />
            <argument
                android:name="id_pets"
                app:argType="string[]" />
            <argument
                android:name="request_name"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/durationRequestFragment"
            android:name="com.example.scooby.scooby.request.DurationRequestFragment"
            android:label="fragment_duration_request"
            tools:layout="@layout/fragment_duration_request">

            <argument
                android:name="id_pets"
                app:argType="string[]" />
            <argument
                android:name="listOfData"
                app:argType="string[]" />
            <action
                android:id="@+id/action_durationRequestFragment_to_locationRequestFragment"
                app:destination="@id/locationRequestFragment" />
        </fragment>
        <fragment
            android:id="@+id/noteFragment"
            android:name="com.example.scooby.scooby.request.NoteFragment"
            android:label="fragment_note"
            tools:layout="@layout/fragment_note">

            <argument
                android:name="id_pets"
                app:argType="string[]" />
            <argument
                android:name="listOfData"
                app:argType="string[]" />
        </fragment>
        <fragment
            android:id="@+id/locationRequestFragment"
            android:name="com.example.scooby.scooby.request.LocationRequestFragment"
            android:label="fragment_location_request"
            tools:layout="@layout/fragment_location_request">
            <action
                android:id="@+id/action_locationRequestFragment2_to_noteFragment"
                app:destination="@id/noteFragment" />
            <argument
                android:name="id_pets"
                app:argType="string[]" />
            <argument
                android:name="listOfData"
                app:argType="string[]" />
        </fragment>
        <fragment
            android:id="@+id/favoriteFragment"
            android:name="com.example.scooby.scooby.FavoriteFragment"
            android:label="fragment_favorite"
            tools:layout="@layout/fragment_favorite" />
    </navigation>

    <navigation
        android:id="@+id/toPawsFragment"
        app:startDestination="@id/pawsFragment">

        <fragment
            android:id="@+id/pawsFragment"
            android:name="com.example.scooby.scooby.paws.fragment.PawsFragment"
            android:label="fragment_paws"
            tools:layout="@layout/fragment_paws" />

    </navigation>

    <navigation
        android:id="@+id/toBookingFragment"
        app:startDestination="@id/bookingFragment">
        <fragment
            android:id="@+id/bookingFragment"
            android:name="com.example.scooby.scooby.ui.BookingFragment"
            android:label="fragment_booking"
            tools:layout="@layout/fragment_booking" />
    </navigation>

    <navigation
        android:id="@+id/toCommunityFragment"
        app:startDestination="@id/communityFragment">
        <fragment
            android:id="@+id/communityFragment"
            android:name="com.example.scooby.scooby.ui.CommunityFragment"
            android:label="fragment_community"
            tools:layout="@layout/fragment_community" />
    </navigation>

    <navigation
        android:id="@+id/toProfileFragment"
        app:startDestination="@id/profileFragment">

        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.scooby.scooby.userProfile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile">
            <action
                android:id="@+id/action_profileFragment_to_editProfileFragment"
                app:destination="@id/editProfileFragment" />
            <action
                android:id="@+id/action_profileFragment_to_petProfileFragment"
                app:destination="@id/petProfileFragment" />
            <action
                android:id="@+id/action_profileFragment_to_myPetsFragment"
                app:destination="@id/myPetsFragment" />
        </fragment>

        <fragment
            android:id="@+id/editProfileFragment"
            android:name="com.example.scooby.scooby.userProfile.EditProfileFragment"
            android:label="fragment_edit_profile"
            tools:layout="@layout/fragment_edit_profile" />
        <fragment
            android:id="@+id/petProfileFragment"
            android:name="com.example.scooby.scooby.userProfile.PetProfileFragment"
            android:label="fragment_pet_profile"
            tools:layout="@layout/fragment_pet_profile">
            <!--suppress NavigationFile -->
            <argument
                android:name="pet_position"
                app:argType="integer" />
        </fragment>

        <fragment
            android:id="@+id/myPetsFragment"
            android:name="com.example.scooby.scooby.addPet.MyPetsFragment"
            android:label="fragment_my_pets"
            tools:layout="@layout/fragment_my_pets">
            <action
                android:id="@+id/action_myPetsFragment_to_addPetsFragment"
                app:destination="@id/addPetsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        </fragment>
        <fragment
            android:id="@+id/addPetsFragment"
            android:name="com.example.scooby.scooby.addPet.NamePetFragment"
            android:label="fragment_add_pets"
            tools:layout="@layout/fragment_name_pet">
            <action
                android:id="@+id/action_addPetsFragment_to_typePetFragment"
                app:destination="@id/typePetFragment" />
        </fragment>

        <fragment
            android:id="@+id/typePetFragment"
            android:name="com.example.scooby.scooby.addPet.TypePetFragment"
            android:label="fragment_type_pet"
            tools:layout="@layout/fragment_type_pet">
            <argument
                android:name="pet_name"
                app:argType="string" />
            <action
                android:id="@+id/action_typePetFragment_to_breedFragment"
                app:destination="@id/breedFragment" />
        </fragment>
        <fragment
            android:id="@+id/breedFragment"
            android:name="com.example.scooby.scooby.addPet.BreedPetFragment"
            android:label="fragment_breed"
            tools:layout="@layout/fragment_breed_pet">
            <argument
                android:name="listOfData"
                app:argType="string[]" />
            <action
                android:id="@+id/action_breedFragment_to_sizePetFragment"
                app:destination="@id/sizePetFragment" />
        </fragment>
        <fragment
            android:id="@+id/sizePetFragment"
            android:name="com.example.scooby.scooby.addPet.SizePetFragment"
            android:label="fragment_size_pet"
            tools:layout="@layout/fragment_size_pet">
            <argument
                android:name="listOfData"
                app:argType="string[]" />
            <action
                android:id="@+id/action_sizePetFragment_to_birthdayPetFragment"
                app:destination="@id/birthdayPetFragment" />

        </fragment>
        <fragment
            android:id="@+id/birthdayPetFragment"
            android:name="com.example.scooby.scooby.addPet.BirthdayPetFragment"
            android:label="fragment_birthday_pet"
            tools:layout="@layout/fragment_birthday_pet">
            <argument
                android:name="listOfData"
                app:argType="string[]" />
            <action
                android:id="@+id/action_birthdayPetFragment_to_infoPetFragment"
                app:destination="@id/infoPetFragment" />
        </fragment>
        <fragment
            android:id="@+id/infoPetFragment"
            android:name="com.example.scooby.scooby.addPet.InfoPetFragment"
            android:label="fragment_info_pet"
            tools:layout="@layout/fragment_info_pet">
            <action
                android:id="@+id/action_infoPetFragment_to_submitPetFragment"
                app:destination="@id/submitPetFragment"
                app:popUpTo="@id/myPetsFragment"
                app:popUpToInclusive="true" />
            <argument
                android:name="listOfData"
                app:argType="string[]"
                app:nullable="true" />
        </fragment>
        <fragment
            android:id="@+id/submitPetFragment"
            android:name="com.example.scooby.scooby.addPet.SubmitPetFragment"
            android:label="fragment_submit_pet"
            tools:layout="@layout/fragment_submit_pet">
            <argument
                android:name="listOfData"
                app:argType="string[]"
                app:nullable="true" />

        </fragment>
    </navigation>



</navigation>
