<resources>
    <!-- Base application theme. -->
    <style name="Theme.Scooby" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black_clear</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_BG</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--    Community Switch Btn-->
    <style name="CommunitySwitch" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>


    <!--    facebook blue button-->
    <style name="blue_btn" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">
            @drawable/rounded_button
        </item>
    </style>

    <style name="rounded_button">
        <item name="colorPrimary">
            @color/blue
        </item>
    </style>

    <!--    Google blue button-->
    <style name="white_btn" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">
            @drawable/rounded_button_white
        </item>
    </style>

    <style name="rounded_button_whit">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CustomBottomNavigationTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>

    <style name="CustomBottomNavigationTextAppearanceInActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>

    <style name="bottomNavigationStyle">
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnSecondaryContainer">@color/dark_gray</item>
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="compatShadowEnabled">true</item>
    </style>

    <style name="outlined_button">
        <item name="materialThemeOverlay">@drawable/outlined_button</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_line_divider</item>
    </style>


    <!--Size Action Bar-->
    <style name="sizeText" parent="@android:style/TextAppearance">
        <item name="android:textSize">5sp</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F20F0F0F</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">82dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="TopCornerCardview" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>

</resources>